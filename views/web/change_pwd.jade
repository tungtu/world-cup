extends ../modal

block title
  strong Change Password

block content
  .row
    .col-sm-12
      .form-top
        form.login-form(role='form', action='change-pwd', method='post')
          .form-group
            label(for='form-password') Password
            input#form-password.form-password.form-control(type='password', name='password', placeholder="******", required)

          .form-group
            label(for='form-confirm_password') Confirm Password
            input#form-confirm_password.form-confirm_password.form-control(type='password', name='confirm_password', placeholder="******", required)

          button.btn(type='submit').btn-primary.btn-block Update
